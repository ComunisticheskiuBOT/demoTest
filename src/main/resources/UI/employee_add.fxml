<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<StackPane prefWidth="600.0" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.demotest.app_controllers.EmployeeAppController">
    <children>
        <StackPane>
            <children>
                <VBox spacing="10.0" alignment="BOTTOM_CENTER" >
                    <children>
                        <GridPane>
                            <children>
                                <Label text="Фамилия:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                <Label text="Имя:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                <Label text="Отчество:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                <Label text="Дата Рождения:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                                <Label text="Паспорт:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                                <Label text="Адрес:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                                <Label text="Номер телефона:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
                                <Label text="Эл. Почта:" GridPane.columnIndex="0" GridPane.rowIndex="8" />
                                <Label text="Пароль" GridPane.columnIndex="0" GridPane.rowIndex="9" />
                                <Label text="Дата трудоустройства:" GridPane.columnIndex="0" GridPane.rowIndex="10" />
                                <Label text="Дата увольнения:" GridPane.columnIndex="0" GridPane.rowIndex="11" />
                                <Label text="ID отдела:" GridPane.columnIndex="0" GridPane.rowIndex="12" />
                                <Label text="Должность:" GridPane.columnIndex="0" GridPane.rowIndex="13" />
                                <Label text="Статус:" GridPane.columnIndex="0" GridPane.rowIndex="14" />
                                <Label text="Зарплата:" GridPane.columnIndex="0" GridPane.rowIndex="15" />
                                <Label text="Описание:" GridPane.columnIndex="0" GridPane.rowIndex="16" />

                                <TextField fx:id="secondNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                <TextField fx:id="birthDateField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                                <TextField fx:id="passportNumberField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                                <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                                <TextField fx:id="phoneNumberField" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                                <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="8" />
                                <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="9" />
                                <TextField fx:id="hireDateField" GridPane.columnIndex="1" GridPane.rowIndex="10" />
                                <TextField fx:id="terminationDateField" GridPane.columnIndex="1" GridPane.rowIndex="11" />
                                <TextField fx:id="departmentIdField" GridPane.columnIndex="1" GridPane.rowIndex="12" />
                                <TextField fx:id="positionField" GridPane.columnIndex="1" GridPane.rowIndex="13" />
                                <ComboBox fx:id="statusComboBox" GridPane.columnIndex="1" GridPane.rowIndex="14">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="ACTIVE" />
                                            <String fx:value="NONACTIVE" />
                                        </FXCollections>
                                    </items>
                                </ComboBox>
                                <TextField fx:id="salaryField" GridPane.columnIndex="1" GridPane.rowIndex="15" />
                                <TextField fx:id="commentsField" GridPane.columnIndex="1" GridPane.rowIndex="16" />
                            </children>

                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS" maxWidth="148.0" minWidth="100.0" prefWidth="109.0" />
                                <ColumnConstraints hgrow="ALWAYS" maxWidth="228.0" minWidth="100.0" prefWidth="189.0" />

                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="5.0" prefHeight="5.0" vgrow="NEVER" />
                                <RowConstraints minHeight="15.0" prefHeight="50.0" vgrow="ALWAYS" />
                                <RowConstraints minHeight="15.0" prefHeight="50.0" vgrow="ALWAYS" />
                                <RowConstraints minHeight="15.0" prefHeight="50.0" vgrow="ALWAYS" />
                                <RowConstraints minHeight="15.0" prefHeight="50.0" vgrow="ALWAYS" />
                                <RowConstraints minHeight="15.0" prefHeight="50.0" vgrow="ALWAYS" />
                                <RowConstraints minHeight="15.0" prefHeight="50.0" vgrow="ALWAYS" />
                                <RowConstraints minHeight="15.0" prefHeight="50.0" vgrow="ALWAYS" />
                                <RowConstraints minHeight="15.0" prefHeight="50.0" vgrow="ALWAYS" />
                                <RowConstraints minHeight="15.0" prefHeight="50.0" vgrow="ALWAYS" />
                                <RowConstraints minHeight="15.0" prefHeight="50.0" vgrow="ALWAYS" />
                                <RowConstraints minHeight="15.0" prefHeight="50.0" vgrow="ALWAYS" />
                                <RowConstraints minHeight="15.0" prefHeight="50.0" vgrow="ALWAYS" />
                                <RowConstraints minHeight="15.0" prefHeight="50.0" vgrow="ALWAYS" />
                                <RowConstraints minHeight="15.0" prefHeight="50.0" vgrow="ALWAYS" />
                                <RowConstraints minHeight="15.0" prefHeight="50.0" vgrow="ALWAYS" />
                                <RowConstraints minHeight="15.0" prefHeight="50.0" vgrow="ALWAYS" />
                            </rowConstraints>
                        </GridPane>
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                            <children>
                                <Button fx:id="addEmployeeButton" mnemonicParsing="false" text="Добавить пользователя" onAction="#handleAddEmployee" />
                                <Button fx:id="handleCleanButton" mnemonicParsing="false" text="Очистить" onAction="#handleCleanButton" />
                                <Button fx:id="handleBackButton" mnemonicParsing="false" text="Назад" onAction="#handleBackButton" />
                            </children>
                        </HBox>

                        <!-- Filters -->
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                            <children>
                                <TextField fx:id="idFilter" promptText="Фильтр по ID" />
                                <TextField fx:id="surnameFilter" promptText="Фильтр по Фамилии" />
                                <TextField fx:id="nameFilter" promptText="Фильтр по Имени" />
                                <TextField fx:id="patronymicFilter" promptText="Фильтр по Отчеству" />
                                <TextField fx:id="birthDateFilter" promptText="Фильтр по дате рождения"/>
                                <ComboBox fx:id="statusFilter">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="ALL" />
                                            <String fx:value="ACTIVE" />
                                            <String fx:value="NONACTIVE" />
                                        </FXCollections>
                                    </items>
                                </ComboBox>
                            </children>
                        </HBox>

                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                            <children>
                                <TextField fx:id="deleteIdField" promptText="ID для удаления" />
                                <Button fx:id="deleteEmployeeButton" mnemonicParsing="false" text="Удалить пользователя" onAction="#handleDeleteEmployee" />
                                <Button fx:id="updateEmployeeButton" mnemonicParsing="false" text="Обновить" onAction="#handleUpdateEmployees" />
                            </children>
                        </HBox>
                        <TableView fx:id="employeeTable">
                            <columns>
                                <TableColumn text="ID" fx:id="id" />
                                <TableColumn text="Фамилия" fx:id="second_name" />
                                <TableColumn text="Имя" fx:id="first_name" />
                                <TableColumn text="Отчество" fx:id="last_name" />
                                <TableColumn text="Дата Рождения" fx:id="birth_date" />
                                <TableColumn text="Паспорт" fx:id="passport_number" />
                                <TableColumn text="Адрес" fx:id="adDress" />
                                <TableColumn text="Номер телефона" fx:id="phone_number" />
                                <TableColumn text="Эл. Почта" fx:id="Email" />
                                <TableColumn text="Пароль" fx:id="pass_word" />
                                <TableColumn text="Дата трудоустройства" fx:id="hire_date" />
                                <TableColumn text="Дата увольнения" fx:id="termination_date" />
                                <TableColumn text="Отдел" fx:id="department_id" />
                                <TableColumn text="Должность" fx:id="Position" />
                                <TableColumn text="Статус" fx:id="Status" />
                                <TableColumn text="Зарплата" fx:id="Salary" />
                                <TableColumn text="Описание" fx:id="Comments" />
                            </columns>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </StackPane>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</StackPane>