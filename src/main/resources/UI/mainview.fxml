<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.demotest.app_controllers.MainViewController">
    <children>
        <VBox spacing="10.0" alignment="TOP_CENTER">

            <Label text="Список таблиц" style="-fx-font-size: 16; -fx-font-weight: bold;" />
            <VBox  fx:id="buttonContainer"  alignment="CENTER" StackPane.alignment="CENTER">
                <Button id="usersButton" fx:id="usersButton" text="Пользователи" prefWidth="150" prefHeight="40" />
                <Button id="workersButton" fx:id="workersButton" text="Работники" prefWidth="150" prefHeight="40" />
                <Button id="ordersButton" fx:id="ordersButton" text="Заказы" prefWidth="150" prefHeight="40"  />
                <Button id="customersButton" fx:id="customersButton" text="Заказчики" prefWidth="150" prefHeight="40"  />
                <Button id="productsButton" fx:id="productsButton" text="Продукция" prefWidth="150" prefHeight="40"  />
                <Button id="componentsButton" fx:id="componentsButton" text="Составляющие" prefWidth="150" prefHeight="40"  />
                <Button id="materialsButton" fx:id="materialsButton" text="Материал" prefWidth="150" prefHeight="40" />
                <Button id="transportsButton" fx:id="transportsButton" text="Транспорт" prefWidth="150" prefHeight="40" />
            </VBox>

            <GridPane>
                <children>
                    <Label text="Session ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <Label fx:id="sessionLabel" text="Undefined" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                </children>
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="148.0" minWidth="10.0" prefWidth="109.0" />
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="228.0" minWidth="10.0" prefWidth="189.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>
            </GridPane>
            <Button id="loginButton" fx:id="logoutButton" alignment="CENTER" defaultButton="true" mnemonicParsing="false" text="Logout" StackPane.alignment="CENTER_RIGHT"  />

        </VBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</StackPane>
