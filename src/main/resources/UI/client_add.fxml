<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<StackPane prefWidth="600.0" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.demotest.app_controllers.ClientAppController">
    <children>
        <StackPane>
            <children>
                <VBox spacing="10.0" alignment="BOTTOM_CENTER" >
                    <children>
                        <GridPane>
                            <children>
                                <Label text="Название компании:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                <Label text="Контактное лицо:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                <Label text="Телефон:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                <Label text="Электронная почта:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                                <Label text="Адрес:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                                <Label text="Репутация:" GridPane.columnIndex="0" GridPane.rowIndex="6" />

                                <TextField fx:id="companyName" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <TextField fx:id="contactPerson" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                <TextField fx:id="phoneNumber" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                <TextField fx:id="email" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                                <TextField fx:id="address" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                                <ComboBox fx:id="reputationComboBox" GridPane.columnIndex="1" GridPane.rowIndex="6">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="BEST" />
                                            <String fx:value="GOOD" />
                                            <String fx:value="NORMAL" />
                                            <String fx:value="BAD" />
                                            <String fx:value="WORSE" />
                                        </FXCollections>
                                    </items>
                                </ComboBox>
                            </children>

                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS" maxWidth="148.0" minWidth="100.0" prefWidth="109.0" />
                                <ColumnConstraints hgrow="ALWAYS" maxWidth="228.0" minWidth="100.0" prefWidth="189.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="5.0" prefHeight="5.0" vgrow="NEVER" />
                                <RowConstraints minHeight="15.0" prefHeight="50.0" vgrow="ALWAYS" />
                                <RowConstraints minHeight="15.0" prefHeight="50.0" vgrow="ALWAYS" />
                                <RowConstraints minHeight="15.0" prefHeight="50.0" vgrow="ALWAYS" />
                                <RowConstraints minHeight="15.0" prefHeight="50.0" vgrow="ALWAYS" />
                                <RowConstraints minHeight="15.0" prefHeight="50.0" vgrow="ALWAYS" />
                            </rowConstraints>
                        </GridPane>
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                            <children>
                                <Button fx:id="addClientButton" mnemonicParsing="false" text="Добавить клиента" onAction="#handleAddClient" />
                                <Button fx:id="handleCleanButton" mnemonicParsing="false" text="Очистить" onAction="#handleCleanButton" />
                                <Button fx:id="handleBackButton" mnemonicParsing="false" text="Назад" onAction="#handleBackButton" />
                            </children>
                        </HBox>
                        <!-- Filters -->
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                            <children>
                                <TextField fx:id="idFilter" promptText="Фильтр по ID" />
                                <TextField fx:id="companyNameFilter" promptText="Фильтр по наименованию" />
                                <TextField fx:id="contactPersonFilter" promptText="Фильтр по контакту" />
                                <ComboBox fx:id="reputationFilter">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="ALL" />
                                            <String fx:value="BEST" />
                                            <String fx:value="GOOD" />
                                            <String fx:value="NORMAL" />
                                            <String fx:value="BAD" />
                                            <String fx:value="WORSE" />
                                        </FXCollections>
                                    </items>
                                </ComboBox>
                            </children>
                        </HBox>

                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                            <children>
                                <TextField fx:id="deleteIdField" promptText="ID для удаления" />
                                <Button fx:id="deleteClientButton" mnemonicParsing="false" text="Удалить клиента" onAction="#handleDeleteClient" />
                                <Button fx:id="updateClientButton" mnemonicParsing="false" text="Обновить" onAction="#handleUpdateClients" />
                            </children>
                        </HBox>
                        <TableView fx:id="clientTable">
                            <columns>
                                <TableColumn text="ID" fx:id="ClientId" />
                                <TableColumn text="Название компании" fx:id="CompanyName" />
                                <TableColumn text="Контактное лицо" fx:id="ContactPerson" />
                                <TableColumn text="Телефон" fx:id="PhoneNumber" />
                                <TableColumn text="Электронная почта" fx:id="Email" />
                                <TableColumn text="Адрес" fx:id="Address" />
                                <TableColumn text="Репутация" fx:id="Reputation" />
                            </columns>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </StackPane>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</StackPane>