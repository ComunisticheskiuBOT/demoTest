<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane prefWidth="600.0" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.demotest.app_controllers.DepartmentAppController">
    <children>
        <StackPane>
            <children>
                <VBox spacing="10.0" alignment="BOTTOM_CENTER" >
                    <children>
                        <GridPane>
                            <children>
                                <Label text="Название отдела:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                <Label text="Местоположение:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                <Label text="Описание:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                <TextField fx:id="departmentName" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <TextField fx:id="locAtion" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                <TextField fx:id="description" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                            </children>

                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS" maxWidth="148.0" minWidth="100.0" prefWidth="109.0" />
                                <ColumnConstraints hgrow="ALWAYS" maxWidth="228.0" minWidth="100.0" prefWidth="189.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="5.0" prefHeight="5.0" vgrow="NEVER" />
                                <RowConstraints minHeight="15.0" prefHeight="50.0" vgrow="ALWAYS" />
                                <RowConstraints minHeight="15.0" prefHeight="50.0" vgrow="ALWAYS" />
                            </rowConstraints>
                        </GridPane>
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                            <children>
                                <Button fx:id="addDepartmentButton" mnemonicParsing="false" text="Добавить отдел" onAction="#handleAddDepartment" />
                                <Button fx:id="handleCleanButton" mnemonicParsing="false" text="Очистить" onAction="#handleCleanButton" />
                                <Button fx:id="handleBackButton" mnemonicParsing="false" text="Назад" onAction="#handleBackButton" />
                            </children>
                        </HBox>
                        <!-- Filters -->
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                            <children>
                                <TextField fx:id="idFilter" promptText="Фильтр по ID" />
                                <TextField fx:id="departmentNameFilter" promptText="Фильтр по наименованию" />
                                <TextField fx:id="locationFilter" promptText="Фильтр по локации" />
                            </children>
                        </HBox>

                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                            <children>
                                <TextField fx:id="deleteIdField" promptText="ID для удаления" />
                                <Button fx:id="deleteDepartmentButton" mnemonicParsing="false" text="Удалить отдел" onAction="#handleDeleteDepartment" />
                                <Button fx:id="updateDepartmentButton" mnemonicParsing="false" text="Обновить" onAction="#handleUpdateDepartments" />
                            </children>
                        </HBox>
                        <TableView fx:id="departmentTable">
                            <columns>
                                <TableColumn text="ID" fx:id="DepartmentId" />
                                <TableColumn text="Название отдела" fx:id="DepartmentName" />
                                <TableColumn text="Местоположение" fx:id="Location" />
                                <TableColumn text="Описание" fx:id="Description" />
                            </columns>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </StackPane>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</StackPane>