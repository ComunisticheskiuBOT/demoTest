<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<StackPane prefWidth="600.0" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.demotest.app_controllers.ProjectAppController">
    <children>
        <StackPane>
            <children>
                <VBox spacing="10.0" alignment="BOTTOM_CENTER" >
                    <children>
                        <GridPane hgap="15" vgap="10">
                            <children>
                                <Label text="ID сотрудника:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                <Label text="Наименование проекта:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                <Label text="Чертёж:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                                <Label text="Тип материала:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                                <Label text="Ожидаемое время:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                                <Label text="Описание проекта:" GridPane.columnIndex="0" GridPane.rowIndex="7" />

                                <TextField fx:id="engineerIdField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                <TextField fx:id="projectNameField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                <TextField fx:id="drawingField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                                <ComboBox fx:id="materialTypeField" GridPane.columnIndex="1" GridPane.rowIndex="5">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="TUBE" />
                                            <String fx:value="PLATE" />
                                            <String fx:value="SHEET" />
                                        </FXCollections>
                                    </items>
                                </ComboBox>
                                <TextField fx:id="expectedTimeField" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                                <TextField fx:id="projectDescriptionField" GridPane.columnIndex="1" GridPane.rowIndex="7" />

                            </children>

                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS" maxWidth="148.0" minWidth="100.0" prefWidth="109.0" />
                                <ColumnConstraints hgrow="ALWAYS" maxWidth="228.0" minWidth="100.0" prefWidth="189.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="5.0" prefHeight="5.0" vgrow="NEVER" />
                                <RowConstraints minHeight="15.0" prefHeight="50.0" vgrow="ALWAYS" />
                                <RowConstraints minHeight="15.0" prefHeight="50.0" vgrow="ALWAYS" />
                                <RowConstraints minHeight="15.0" prefHeight="50.0" vgrow="ALWAYS" />
                                <RowConstraints minHeight="15.0" prefHeight="50.0" vgrow="ALWAYS" />
                                <RowConstraints minHeight="15.0" prefHeight="50.0" vgrow="ALWAYS" />
                            </rowConstraints>
                        </GridPane>
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                            <children>
                                <Button fx:id="addProjectButton" mnemonicParsing="false" text="Добавить проект" onAction="#handleAddProject" />
                                <Button fx:id="handleCleanButton" mnemonicParsing="false" text="Очистить" onAction="#handleCleanButton" />
                                <Button fx:id="handleBackButton" mnemonicParsing="false" text="Назад" onAction="#handleBackButton" />
                            </children>
                        </HBox>
                        <!-- Filters -->
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                            <children>
                                <TextField fx:id="idFilter" promptText="Фильтр по ID" />
                                <TextField fx:id="projectNameFilter" promptText="Фильтр по наименованию" />
                                <TextField fx:id="drawingFilter" promptText="Фильтр по чертежу" />
                                <ComboBox fx:id="materialTypeFilter">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="ALL" />
                                            <String fx:value="TUBE" />
                                            <String fx:value="PLATE" />
                                            <String fx:value="SHEET" />
                                        </FXCollections>
                                    </items>
                                </ComboBox>
                            </children>
                        </HBox>

                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                            <children>
                                <TextField fx:id="deleteIdField" promptText="ID для удаления" />
                                <Button fx:id="deleteProjectButton" mnemonicParsing="false" text="Удалить проекта" onAction="#handleDeleteProject" />
                                <Button fx:id="updateProjectButton" mnemonicParsing="false" text="Обновить" onAction="#handleUpdateProjects" />
                            </children>
                        </HBox>
                        <TableView fx:id="projectTable">
                            <columns>
                                <TableColumn text="ID" fx:id="ProjectId" />
                                <TableColumn text="ID сотрудника-инженера" fx:id="EngineerId" />
                                <TableColumn text="Наименование проекта" fx:id="ProjectName" />
                                <TableColumn text="Чертёж" fx:id="Drawing" />
                                <TableColumn text="Тип Материала" fx:id="MateriaLType" />
                                <TableColumn text="Ожидаемое время" fx:id="ExpectedTime" />
                                <TableColumn text="Описание проекта" fx:id="ProjectDescription" />
                            </columns>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </StackPane>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</StackPane>