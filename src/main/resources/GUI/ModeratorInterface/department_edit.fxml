<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane prefWidth="600.0" xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.example.demotest.app_controllers.DepartmentAppController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <StackPane>
        <VBox spacing="10.0" alignment="BOTTOM_CENTER">

            <GridPane>
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS" maxWidth="148.0" minWidth="100.0" prefWidth="109.0"/>
                    <ColumnConstraints hgrow="ALWAYS" maxWidth="228.0" minWidth="100.0" prefWidth="189.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="5.0" prefHeight="5.0" vgrow="NEVER"/>
                    <RowConstraints minHeight="15.0" prefHeight="50.0" vgrow="ALWAYS"/>
                    <RowConstraints minHeight="15.0" prefHeight="50.0" vgrow="ALWAYS"/>
                </rowConstraints>
                <Label text="Название отдела:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <Label text="Местоположение:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <Label text="Описание:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <TextField fx:id="departmentName" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <TextField fx:id="locAtion" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <TextField fx:id="description" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            </GridPane>

            <HBox spacing="10.0" alignment="CENTER_LEFT">
            </HBox>

            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <TextField fx:id="idFilter" promptText="Фильтр по ID"/>
                <TextField fx:id="departmentNameFilter" promptText="Фильтр по наименованию"/>
                <TextField fx:id="locationFilter" promptText="Фильтр по локации"/>
            </HBox>

            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Button fx:id="editDepartmentButton" mnemonicParsing="false" text="Изменить"
                        onAction="#handleDeleteDepartment"/>
                <Button fx:id="updateDepartmentButton" mnemonicParsing="false" text="Обновить"
                        onAction="#handleUpdateDepartments"/>
                <Button fx:id="cleanDepartmentButton" mnemonicParsing="false" text="Очистить"
                        onAction="#handleCleanButton"/>
                <Button fx:id="handleBackButton" mnemonicParsing="false" text="Назад"
                        onAction="#handleBackButton"/>
            </HBox>

            <TableView fx:id="departmentTable" onMouseClicked="#handleTableClick">
                <columns>
                    <TableColumn text="ID" fx:id="DepartmentId"/>
                    <TableColumn text="Название отдела" fx:id="DepartmentName"/>
                    <TableColumn text="Местоположение" fx:id="Location"/>
                    <TableColumn text="Описание" fx:id="Description"/>
                </columns>
            </TableView>

        </VBox>
    </StackPane>
</StackPane>