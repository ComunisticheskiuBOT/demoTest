<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane prefWidth="231.0" xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.example.demotest.app_controllers.LoginController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <StackPane>
        <VBox spacing="10.0" alignment="CENTER">

            <GridPane>
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="148.0" minWidth="10.0" prefWidth="109.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="228.0" minWidth="10.0" prefWidth="189.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <Label text="Номер паспорта:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Label text="Пароль:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="user" promptText="Введите паспорт" GridPane.columnIndex="1"
                           GridPane.rowIndex="0"/>
                <PasswordField fx:id="password" promptText="Введите пароль" GridPane.columnIndex="1"
                               GridPane.rowIndex="1"/>
            </GridPane>

            <StackPane prefHeight="-1.0" prefWidth="-1.0">
                <Button fx:id="loginButton" alignment="CENTER" defaultButton="true" mnemonicParsing="false"
                        text="Залогиниться" StackPane.alignment="CENTER_RIGHT"/>
                <Button fx:id="connectButton" alignment="CENTER" defaultButton="true"
                        mnemonicParsing="false" text="Коннектор БД" StackPane.alignment="CENTER_LEFT"/>
            </StackPane>

        </VBox>
    </StackPane>
</StackPane>