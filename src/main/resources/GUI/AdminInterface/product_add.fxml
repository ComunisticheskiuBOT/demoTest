<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<StackPane prefWidth="600.0" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.demotest.app_controllers.ProductAppController">
    <children>
        <StackPane>
            <children>
                <VBox spacing="10.0" alignment="BOTTOM_CENTER" >
                    <children>
                        <GridPane hgap="15" vgap="10">
                            <children>
                                <Label text="ID проекта:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                <Label text="Наименование продукта:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                <Label text="Тип продукта:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                                <Label text="Количество продукта:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                                <Label text="Масса продукта:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                                <Label text="Цена продукта:" GridPane.columnIndex="0" GridPane.rowIndex="7" />

                                <TextField fx:id="projectIdField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                <TextField fx:id="productNameField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                <ComboBox fx:id="productTypeField" GridPane.columnIndex="1" GridPane.rowIndex="4">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="COMPOSITE" />
                                            <String fx:value="SOLID" />
                                        </FXCollections>
                                    </items>
                                </ComboBox>
                                <TextField fx:id="quantityField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                                <TextField fx:id="weightField" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                                <TextField fx:id="costField" GridPane.columnIndex="1" GridPane.rowIndex="7" />

                            </children>

                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS" maxWidth="148.0" minWidth="100.0" prefWidth="109.0" />
                                <ColumnConstraints hgrow="ALWAYS" maxWidth="228.0" minWidth="100.0" prefWidth="189.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="5.0" prefHeight="5.0" vgrow="NEVER" />
                                <RowConstraints minHeight="15.0" prefHeight="50.0" vgrow="ALWAYS" />
                                <RowConstraints minHeight="15.0" prefHeight="50.0" vgrow="ALWAYS" />
                                <RowConstraints minHeight="15.0" prefHeight="50.0" vgrow="ALWAYS" />
                                <RowConstraints minHeight="15.0" prefHeight="50.0" vgrow="ALWAYS" />
                                <RowConstraints minHeight="15.0" prefHeight="50.0" vgrow="ALWAYS" />
                            </rowConstraints>
                        </GridPane>
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                            <children>
                                <Button fx:id="addProductButton" mnemonicParsing="false" text="Добавить продукт" onAction="#handleAddProduct" />
                                <Button fx:id="handleCleanButton" mnemonicParsing="false" text="Очистить" onAction="#handleCleanButton" />
                                <Button fx:id="handleBackButton" mnemonicParsing="false" text="Назад" onAction="#handleBackButton" />
                            </children>
                        </HBox>
                        <!-- Filters -->
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                            <children>
                                <TextField fx:id="idFilter" promptText="Фильтр по ID" />
                                <TextField fx:id="productNameFilter" promptText="Фильтр по наименованию" />
                                <ComboBox fx:id="productTypeFilter">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="ALL" />
                                            <String fx:value="COMPOSITE" />
                                            <String fx:value="SOLID" />
                                        </FXCollections>
                                    </items>
                                </ComboBox>
                            </children>
                        </HBox>

                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                            <children>
                                <TextField fx:id="deleteIdField" promptText="ID для удаления" />
                                <Button fx:id="deleteProductButton" mnemonicParsing="false" text="Удалить продукт" onAction="#handleDeleteProduct" />
                                <Button fx:id="updateProductButton" mnemonicParsing="false" text="Обновить" onAction="#handleUpdateProducts" />
                            </children>
                        </HBox>
                        <TableView fx:id="productTable">
                            <columns>
                                <TableColumn text="ID" fx:id="ProductId" />
                                <TableColumn text="ID проекта" fx:id="ProjectId" />
                                <TableColumn text="Наименование продукта" fx:id="ProductName" />
                                <TableColumn text="Тип продукта" fx:id="ProducTType" />
                                <TableColumn text="Кол-во" fx:id="Quantity" />
                                <TableColumn text="Масса" fx:id="Weight" />
                                <TableColumn text="Цена" fx:id="Cost" />
                            </columns>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </StackPane>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</StackPane>