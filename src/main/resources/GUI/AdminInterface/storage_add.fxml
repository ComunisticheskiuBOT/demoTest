<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<StackPane prefWidth="600.0" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.demotest.app_controllers.StorageAppController">
    <children>
        <StackPane>
            <children>
                <VBox spacing="10.0" alignment="BOTTOM_CENTER" >
                    <children>
                        <GridPane hgap="15" vgap="10">
                            <children>
                                <Label text="ID склада:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                <Label text="ID продукта:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                <Label text="Количество:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                                <Label text="Дата прибытия:" GridPane.columnIndex="0" GridPane.rowIndex="5" />

                                <TextField fx:id="storageIdField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                <TextField fx:id="productIdField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                <TextField fx:id="quantityField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                                <TextField fx:id="arrivalDateField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                            </children>

                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS" maxWidth="148.0" minWidth="100.0" prefWidth="109.0" />
                                <ColumnConstraints hgrow="ALWAYS" maxWidth="228.0" minWidth="100.0" prefWidth="189.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="5.0" prefHeight="5.0" vgrow="NEVER" />
                                <RowConstraints minHeight="15.0" prefHeight="40.0" vgrow="ALWAYS" />
                                <RowConstraints minHeight="15.0" prefHeight="40.0" vgrow="ALWAYS" />
                                <RowConstraints minHeight="15.0" prefHeight="40.0" vgrow="ALWAYS" />
                            </rowConstraints>
                        </GridPane>
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                            <children>
                                <Button fx:id="addStorageButton" mnemonicParsing="false" text="Добавить склад" onAction="#handleAddStorages" />
                                <Button fx:id="handleCleanButton" mnemonicParsing="false" text="Очистить" onAction="#handleCleanButton" />
                                <Button fx:id="handleBackButton" mnemonicParsing="false" text="Назад" onAction="#handleBackButton" />
                            </children>
                        </HBox>
                        <!-- Filters -->
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                            <children>
                                <TextField fx:id="idFilter" promptText="Фильтр по ID" />
                                <TextField fx:id="productIdFilter" promptText="Фильтр по ID продукции" />
                            </children>
                        </HBox>

                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                            <children>
                                <TextField fx:id="deleteIdField" promptText="ID для удаления" />
                                <Button fx:id="deleteStorageButton" mnemonicParsing="false" text="Удалить склад" onAction="#handleDeleteStorage" />
                                <Button fx:id="updateStorageButton" mnemonicParsing="false" text="Обновить" onAction="#handleUpdateStorages" />
                            </children>
                        </HBox>
                        <TableView fx:id="storageTable">
                            <columns>
                                <TableColumn text="ID" fx:id="StorageId" />
                                <TableColumn text="ID продукта" fx:id="ProductId" />
                                <TableColumn text="Количество" fx:id="Quantity" />
                                <TableColumn text="Дата прибытия" fx:id="ArrivalDate" />
                            </columns>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </StackPane>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</StackPane>