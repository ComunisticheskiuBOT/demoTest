<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<StackPane prefWidth="600.0" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.demotest.app_controllers.QualityAppController">
    <children>
        <StackPane>
            <children>
                <VBox spacing="10.0" alignment="BOTTOM_CENTER" >
                    <children>
                        <GridPane hgap="15" vgap="10">
                            <children>
                                <Label text="ID инспектора:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                <Label text="ID продукта:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                <Label text="Дата проверки:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                                <Label text="Результат проверки:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                                <Label text="Комментарии:" GridPane.columnIndex="0" GridPane.rowIndex="6" />

                                <TextField fx:id="inspectorIdField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                <TextField fx:id="productIdField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                <TextField fx:id="inspectionDateField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                                <ComboBox fx:id="resultTypeField" GridPane.columnIndex="1" GridPane.rowIndex="5">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="GOOD" />
                                            <String fx:value="BAD" />
                                        </FXCollections>
                                    </items>
                                </ComboBox>
                                <TextField fx:id="commentsTimeField" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                            </children>

                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS" maxWidth="148.0" minWidth="100.0" prefWidth="109.0" />
                                <ColumnConstraints hgrow="ALWAYS" maxWidth="228.0" minWidth="100.0" prefWidth="189.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="5.0" prefHeight="5.0" vgrow="NEVER" />
                                <RowConstraints minHeight="15.0" prefHeight="50.0" vgrow="ALWAYS" />
                                <RowConstraints minHeight="15.0" prefHeight="50.0" vgrow="ALWAYS" />
                                <RowConstraints minHeight="15.0" prefHeight="50.0" vgrow="ALWAYS" />
                                <RowConstraints minHeight="15.0" prefHeight="50.0" vgrow="ALWAYS" />
                            </rowConstraints>
                        </GridPane>
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                            <children>
                                <Button fx:id="addQualityButton" mnemonicParsing="false" text="Добавить качество" onAction="#handleAddQuality" />
                                <Button fx:id="handleCleanButton" mnemonicParsing="false" text="Очистить" onAction="#handleCleanButton" />
                                <Button fx:id="handleBackButton" mnemonicParsing="false" text="Назад" onAction="#handleBackButton" />
                            </children>
                        </HBox>
                        <!-- Filters -->
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                            <children>
                                <TextField fx:id="idFilter" promptText="Фильтр по ID" />
                                <TextField fx:id="inspectorIdFilter" promptText="Фильтр по ID инспектора" />
                                <TextField fx:id="productIdFilter" promptText="Фильтр по ID продукции" />
                                <ComboBox fx:id="resultTypeFilter">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="ALL" />
                                            <String fx:value="GOOD" />
                                            <String fx:value="BAD" />
                                        </FXCollections>
                                    </items>
                                </ComboBox>
                            </children>
                        </HBox>

                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                            <children>
                                <TextField fx:id="deleteIdField" promptText="ID для удаления" />
                                <Button fx:id="deleteQualityButton" mnemonicParsing="false" text="Удалить проверку качества" onAction="#handleDeleteQuality" />
                                <Button fx:id="updateQualityButton" mnemonicParsing="false" text="Обновить" onAction="#handleUpdateQualities" />
                            </children>
                        </HBox>
                        <TableView fx:id="qualityTable">
                            <columns>
                                <TableColumn text="ID" fx:id="QualityId" />
                                <TableColumn text="ID сотрудника-инспектора" fx:id="InspectorId" />
                                <TableColumn text="ID продукта" fx:id="ProductId" />
                                <TableColumn text="Дата проверки" fx:id="InspectionDate" />
                                <TableColumn text="Результат" fx:id="ResulT" />
                                <TableColumn text="Комментарии" fx:id="Comments" />
                            </columns>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </StackPane>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</StackPane>